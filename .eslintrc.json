{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "airbnb", "prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "no-unused-vars": ["off", { "vars": "all", "args": "after-used" }],
    "consistent-return": "off",
    "no-console": "warn",
    "no-undef": "warn",
    "prefer-const": "off",
    "no-throw-literal": "off",
    "class-methods-use-this": "off",
    "camelcase": "off",
    "func-names": "off"
  }
}
