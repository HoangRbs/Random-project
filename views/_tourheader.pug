header.header
  nav.nav.nav--tours
    a.nav__el(href="/") All tours
    form.nav__search
      button.nav__search-btn
        svg
          use(xlink:href='/img/icons.svg#icon-search')
      input.nav__search-input(type='text' placeholder='Search tours')
  .header__logo
    img(src='/img/logo-white.png' alt='Natours logo')
  nav.nav.nav--user
    if user
      a.nav__el(href='/myTours') My bookings
      button.nav__el.nav__el--logout.Logout Log out
      a.nav__el(href='/myTours')
        img.nav__user-img(src='/img/users/default.jpg' alt='User photo')
        span= user.name
    else 
      a.nav__el(href="/login") Log In
      a.nav__el.nav__el--cta(href="/signUp") Sign up
  
